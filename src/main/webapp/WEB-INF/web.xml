<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <request-character-encoding>UTF-8</request-character-encoding>
    <response-character-encoding>UTF-8</response-character-encoding>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>OutboundManagerController</servlet-name>
        <servlet-class>controller.outboundController.OutboundManagerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OutboundOrderdetalController</servlet-name>
        <servlet-class>controller.outboundController.OutboundOrderdetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OutboundCreateOrderController</servlet-name>
        <servlet-class>controller.outboundController.OutboundCreateOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OutboundUpdateOrderController</servlet-name>
        <servlet-class>controller.outboundController.OutboundUpdateOrderController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>OutboundCreateOrderController</servlet-name>
        <url-pattern>/outboundcreateorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OutboundUpdateOrderController</servlet-name>
        <url-pattern>/outboundupdateorder</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/tld/c.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>